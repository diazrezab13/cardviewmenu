<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="145dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_button_grey"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/imgVoucher"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/voucher_pulsa"/>

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diskon Pembelian Pulsa"
            android:textSize="10sp"
            android:textColor="@color/titleGrey"
            android:textStyle="bold"
            android:layout_below="@id/imgVoucher"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/imgCoin"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_below="@id/txtTitle"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/poin"/>

        <TextView
            android:id="@+id/txtPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1107"
            android:textSize="10sp"
            android:layout_below="@id/txtTitle"
            android:layout_marginTop="5dp"
            android:textColor="@color/bodyGrey"
            android:layout_toRightOf="@id/imgCoin"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/txtInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="More info >>"
            android:textSize="10sp"
            android:layout_marginLeft="175dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/txtTitle"
            android:layout_toRightOf="@id/txtPoint"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

</LinearLayout>