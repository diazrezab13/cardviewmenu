<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/emas_walkthrough"/>

    <TextView
        android:id="@+id/txtTabunganEmas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="PEGADAIAN TABUNGAN EMAS"
        android:textColor="@color/darkGreen"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/txtDescEmas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTabunganEmas"
        android:text="@string/txtTabunganEmas"
        android:textAlignment="center"
        android:textColor="@color/darkGreen"
        android:textSize="10sp"
        android:layout_marginTop="10dp" />

</LinearLayout>