<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/notifOTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:text="@string/txt_notifotp"
            android:textColor="@color/darkGreen"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAlignment="center"/>
        <EditText
            android:id="@+id/inputOTP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/notifOTP"
            android:layout_marginTop="30dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_centerHorizontal="true"
            android:hint="Kode Verifikasi"
            android:textSize="16sp"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/questionOTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/inputOTP"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="Tetap tidak menerima kode Verifikasi?"
            android:textColor="@color/darkGreen"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/linkOTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/questionOTP"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Kirim Ulang (1) 05:00"
            android:textColor="@color/darkGreen"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/inputUlang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linkOTP"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Input ulang nomor telepon"
            android:textColor="@color/darkGreen"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:background="@color/darkGreen">

        <TextView
            android:id="@+id/navSelanjutnya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Selanjutnya"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="275dp"/>
        <Button
            android:id="@+id/arrow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/arrow_selanjutnya"
            android:layout_toRightOf="@id/navSelanjutnya"
            android:layout_centerVertical="true" />
    </RelativeLayout>
    </RelativeLayout>

</LinearLayout>