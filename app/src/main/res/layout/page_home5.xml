<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">


    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/mpo_walkthrough"/>

    <TextView
        android:id="@+id/txtMultiPembayaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="MULTI PEMBAYARAN ONLINE"
        android:textColor="@color/darkGreen"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/txtDescPembayaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtMultiPembayaran"
        android:text="@string/txtMPO"
        android:textColor="@color/darkGreen"
        android:textSize="10sp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"/>

</LinearLayout>