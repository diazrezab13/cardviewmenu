<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.example.cardviewmenu.pulsafragments.PulsaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/white"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="METODE PEMBAYARAN"
            android:paddingTop="6dp"
            android:paddingRight="13dp"
            android:paddingLeft="13dp"
            android:paddingBottom="13dp"
            android:textSize="13sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/background_edit_text_container_2"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="G-Cash"
                android:paddingTop="6dp"
                android:paddingRight="13dp"
                android:paddingLeft="13dp"
                android:layout_marginLeft="10dp"
                android:textSize="10sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saldo Tidak Mencukupi"
                android:paddingTop="2dp"
                android:paddingRight="13dp"
                android:paddingLeft="13dp"
                android:paddingBottom="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="10sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@drawable/background_edit_text_container"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Metode Pembayaran Lainnya"
                android:textSize="13sp"
                android:paddingTop="6dp"
                android:paddingRight="13dp"
                android:paddingEnd="13dp"
                android:paddingLeft="13dp"
                android:paddingStart="13dp"
                />

            <ListView
                android:id="@+id/list"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:divider="#b5b5b5"
                android:dividerHeight="1dp"
                android:listSelector="@drawable/list_selector" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_next_fragment_step_2"
        android:text="Next"
        android:layout_alignParentBottom="true"
        android:textAllCaps="false"
        android:background="@drawable/background_button"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:textColor="@android:color/white"
        />

</RelativeLayout>
