                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/TxtView7"
                        android:text="Rp 7.310/0,01 gram"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_below="@id/TxtView6"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/TxtView8"
                        android:text="Harga Beli Saat Ini"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        android:layout_marginLeft="200dp"
                        android:layout_marginTop="10dp"
                        />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/TxtView9"
                            android:text="Rp 7.090/0,01 gram"
                            android:textColor="@color/colorPrimary"
                            android:textSize="12sp"
                            android:layout_marginLeft="200dp"
                            android:layout_marginTop="5dp"
                            android:layout_below="@id/TxtView8"
                            />
