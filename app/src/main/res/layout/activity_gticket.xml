<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kudaponi_background">

    <ProgressBar
        android:id="@+id/progressBar1"
        android:layout_width="50dip"
        android:layout_height="180dip"
        android:layout_marginTop="475dp"
        android:layout_centerHorizontal="true"
        android:indeterminate="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentTop="true"
        android:background="@color/basicGreen"
        android:outlineProvider="bounds">

        <Button
            android:id="@+id/buttonBack1"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:background="@color/basicGreen"
            android:drawableLeft="@drawable/left_arrow_2"
            android:textSize="10dp"
            android:onClick="onClickBack"
            style="?android:attr/borderlessButtonStyle"
            />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:text="@string/txt_gticket"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lGtikcet"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:background="@drawable/background_button_grey"
        android:layout_centerInParent="true"
>
    <ImageView
        android:id="@+id/imgGTicket"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerInParent="true"
        android:src="@drawable/gticketnew"/>

    <TextView
        android:id="@+id/txtGTicket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgGTicket"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:text="" />

</RelativeLayout>

    <Button
        android:id="@+id/buttonPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/lGtikcet"
        android:onClick="onClickPlay"
        android:text="Play Kuda Poni"/>
</RelativeLayout>