<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/snowyGreen">

    <RelativeLayout
        android:id="@+id/lHeader3"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentTop="true"
        android:background="@color/basicGreen"
        android:outlineProvider="bounds">

        <Button
            android:id="@+id/buttonBack1"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:background="@color/basicGreen"
            android:drawableLeft="@drawable/left_arrow_2"
            android:textSize="10dp"
            android:onClick="onClickBack4"
            style="?android:attr/borderlessButtonStyle"
            />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:text="@string/txt_redeem"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lPoint"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/lHeader3"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/background_button_grey">
        <ImageView
            android:id="@+id/imgCoin2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/poin"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="300.000"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/imgCoin2"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/lRedeem"
        android:layout_width="250dp"
        android:layout_height="145dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_button_grey"
        android:layout_below="@id/lPoint"
        android:layout_centerHorizontal="true"
        >

        <ImageView
            android:id="@+id/imgVoucher"
            android:layout_width="220dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/voucher_pulsa"/>

        <TextView
            android:id="@+id/txtTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diskon Pembelian Pulsa"
            android:textSize="10sp"
            android:textColor="@color/titleGrey"
            android:textStyle="bold"
            android:layout_below="@id/imgVoucher"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/imgCoin"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_below="@id/txtTitle2"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/poin"/>

        <TextView
            android:id="@+id/txtPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1107"
            android:textSize="10sp"
            android:layout_below="@id/txtTitle2"
            android:layout_marginTop="15dp"
            android:textColor="@color/bodyGrey"
            android:layout_toRightOf="@id/imgCoin"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/txtInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="More info >>"
            android:textSize="10sp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="15dp"
            android:layout_below="@id/txtTitle2"
            android:layout_toRightOf="@id/txtPoint"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <Button
        android:id="@+id/buttonRedeem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Redeem"
        android:layout_below="@id/lRedeem"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:id="@+id/lTermRedeem"
        android:layout_width="250dp"
        android:layout_height="145dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_button_grey"
        android:layout_below="@id/buttonRedeem"
        android:layout_centerHorizontal="true"
        >

        <TextView
            android:id="@+id/txtTitleTerm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terms &amp; Conditions"
            android:textSize="10sp"
            android:layout_marginTop="15dp"
            android:textColor="@color/titleGrey"
           android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/txtBodyTerm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dhaksjdhakjsdh"
            android:textSize="10sp"
            android:textColor="@color/bodyGrey"
            android:layout_marginTop="15dp"
            android:layout_below="@id/txtTitleTerm"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>

</RelativeLayout>