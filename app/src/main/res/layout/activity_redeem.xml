<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/snowyGreen">

    <RelativeLayout
        android:id="@+id/lHeader2"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentTop="true"
        android:background="@color/basicGreen"
        android:outlineProvider="bounds">

        <Button
            android:id="@+id/buttonBack1"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:background="@color/basicGreen"
            android:drawableLeft="@drawable/left_arrow_2"
            android:textSize="10dp"
            android:onClick="onClickBack4"
            style="?android:attr/borderlessButtonStyle"
            />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:text="@string/txt_redeem"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="300dp"
        android:layout_height="145dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/background_button_grey"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/lHeader2">

        <ImageView
            android:id="@+id/imgVoucher"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/voucher_pulsa"/>

        <TextView
            android:id="@+id/txtTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diskon Pembelian Pulsa"
            android:textSize="10sp"
            android:textColor="@color/titleGrey"
            android:textStyle="bold"
            android:layout_below="@id/imgVoucher"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/imgCoin"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_below="@id/txtTitle2"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/poin"/>

        <TextView
            android:id="@+id/txtPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1107"
            android:textSize="10sp"
            android:layout_below="@id/txtTitle2"
            android:layout_marginTop="5dp"
            android:textColor="@color/bodyGrey"
            android:layout_toRightOf="@id/imgCoin"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/txtInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="More info >>"
            android:textSize="10sp"
            android:layout_marginLeft="175dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/txtTitle2"
            android:layout_toRightOf="@id/txtPoint"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <Button
        android:id="@+id/buttonBuy"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/top"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:onClick="onClickRedeem"
        android:text="Buy" />

    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="300dp"
        android:layout_height="410dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/background_button_grey"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/buttonBuy">

        <TextView
            android:id="@+id/txtTitleBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terms And Condition"
            android:textSize="24sp"
            android:textColor="@color/titleGrey"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"/>


        <TextView
            android:id="@+id/txtDetail"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Id diam maecenas ultricies mi eget mauris pharetra et. Eget sit amet tellus cras adipiscing enim eu turpis egestas. In pellentesque massa placerat duis ultricies lacus. Aenean sed adipiscing diam donec adipiscing tristique. Consequat ac felis donec et odio pellentesque diam volutpat. Eget lorem dolor sed viverra ipsum nunc aliquet bibendum."
            android:textSize="16sp"
            android:layout_below="@id/txtTitleBottom"
            android:layout_marginTop="5dp"
            android:textColor="@color/bodyGrey"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>

    </RelativeLayout>


</RelativeLayout>